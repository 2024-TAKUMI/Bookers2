<div class='container px-5 px-sm-0'>
	<div class='row'>
	  <div class='col-md-3'>
	    <h2>User info</h2>
	    <table class='table'>
	      <tr>
	        <%= image_tag @user.get_profile_image(100,100) %>
	      </tr>
	      <tr>
	        <th>name</th>
	        <th><%= @user.name %></th>
	      </tr>
	      <tr>
	        <th>introduction</th>
	        <th><%= @user.introduction %></th>
	      </tr>
	    </table>
	    <div class='row'>
	      <!-- 編集リンクが未実装 -->
	    </div>
	    <h2 class="mt-3">New book</h2>
			<%= form_with model: @book do |f| %>
			  <h4>Title</h4>
			  <%= f.text_field :title %>

			  <h4>Opinion</h4>
			  <%= f.text_area :caption %>

			  <%= f.submit 'Create Book' %>
			<% end %>
	</div>

	<div class="col-md-8 offset-md-1">
	  <h2>Books</h2>
	    <table class='table'>
	      <tbody>
	        <% @books.each do |book| %>
		      <tr>
		        <td><%= book.title %></td>
		        <td><%= book.caption %></td>
			    <!--<td><a href="/users/172859">
			      <img src="URL">
				</a>
				</td> -->
		      </tr>
	        	<% end %>
	        <thead>
			  <tr>
			    <th></th>
			    <th>Title</th>
			    <th>Opinion</th>
			    <th colspan="3"></th>
			    <!--<span>
			    	< %= link_to book.title, book_path(@book) %>
			  	</span> -->
			  </tr>
			</thead>
	      </tbody>
	    </table>
	</div>

	</div>
</div>