<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
        <table class='table'>
          <tr>
            <%= image_tag @user.get_profile_image(100,100) %>
          </tr>
          <tr>
            <th>name</th>
            <th><%= @user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= @user.introduction %></th>
          </tr>
        </table>

      <div class='row'>
        <!-- 編集リンクが未実装 -->
      </div>

      <h2 class="mt-3">New book</h2>
        <%= form_with model: @book do |f| %>
      <h4>Title</h4>
        <%= f.text_field :title %>

      <h4>Opinion</h4>
        <%= f.text_area :body %>
        <%= f.submit 'Create Book' %>
        <% end %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
       <table class='table'>
       </table>
    </div>
    </div>
  </div>
</div>