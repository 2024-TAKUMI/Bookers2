<body>
  <main>
    <div class='container px-5 px-sm-0'>
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h2>User info</h2>
          <% if @user.errors.any? %>
          <h3><%= @user.errors.count %> error prohibited this obj from being saved:</h3>
          <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
          <% end %>
          <%= form_with model: @user do |f| %>
            <label for="inputName">Name</label>
              <p><%= f.text_field :name, autofocus: true %></p>
              <p><label for="inputImage">Image</label></p>
                <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
              <p><label for="inputName">Introduction</label></p>
                <%= f.text_area :introduction, autofocus: true %>
              <p><%= f.submit "Update User" %></p>
          <% end %>

          <%= link_to edit_user_path(@user.id) do %>
          <% end %>
      </div>
    </div>
  </main>
</body>